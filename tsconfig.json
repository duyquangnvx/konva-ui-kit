{
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": false,
		"emitDeclarationOnly": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
} 